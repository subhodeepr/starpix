<Window x:Class="StarPix.EnterTags"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tags" Height="224" Width="293" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Icon="images/star.ico">
    <Grid>
        <Grid Height="172" Margin="22,14,21,0" VerticalAlignment="Top">
            <Label HorizontalAlignment="Center" Content="Enter Tags" Margin="44,0,45,0" VerticalAlignment="Top" FontSize="14" FontWeight="SemiBold" Height="34"/>
            <TextBox x:Name="tagTextBox" Margin="10,39,10,51" ToolTip="Enter keywords to allow searching of this photo" TextWrapping="Wrap" KeyDown="tagTextBox_KeyDown"/>
            <Grid HorizontalAlignment="Left" Height="36" Margin="10,136,0,0" VerticalAlignment="Top" Width="224">
                <Button x:Name="okButton" Content="Ok" HorizontalAlignment="Left" Margin="142,7,0,0" VerticalAlignment="Top" Width="75" Click="okButton_Click"/>
                <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="1,7,0,0" VerticalAlignment="Top" Width="75" Click="cancelButton_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
